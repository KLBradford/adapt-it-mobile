var build = require('./lib/build'),
    reqs  = require('./lib/check_reqs'),
    args  = process.argv;

// Support basic help commands
if(args[2] == '--help' || args[2] == '/?' || args[2] == '-h' ||
                    args[2] == 'help' || args[2] == '-help' || args[2] == '/help') {
    build.help();
} else if(reqs.run()) {
    build.run(args[2]);
    process.exit(0);
} else {
    process.exit(2);
}
