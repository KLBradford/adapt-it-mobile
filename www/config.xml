<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.sil.aimobile"
        versionCode = "10" 
        version     = "1.0.0" >
    <name>adapt-it-mobile</name>
    <description>
        An open source application for translating between related languages.
    </description>
    <author email="developers@adapt-it.org" href="http://adapt-it.org/">
        Adapt It Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <!-- icons for PG build -->
    <icon src="icon.png"/>
    <icon src="../assets/icon/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="../assets/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="../assets/icon/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="../assets/icon/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="../assets/icon/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="../assets/icon/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="../assets/icon/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="../assets/icon/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="../assets/icon/windows-phone/icon.png" gap:platform="winphone" />
    <icon src="../assets/icon/windows-phone/tileicon.png" gap:platform="winphone" gap:role="background" />    
</widget>
