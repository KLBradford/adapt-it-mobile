<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.sil.aimobile"
        versionCode = "1" 
        version     = "0.2.0"
        defaultlocale = "en">
    <name short="adapt-it-mobile" xml:lang="en">Adapt It Mobile</name>
    <description xml:lang="en">
        An open source application for translating between related languages.
    </description>
    <author email="developers@adapt-it.org" href="http://adapt-it.org/">
        Adapt It Team
    </author>
    <content src="index.html" />
    <!-- allow local access -->
    <access origin="*" />
    <!-- for Blackberry 10 -->
    <feature name="File" value="File" />
    <!-- preferences -->
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="Orientation" value="default" />
    <preference name="DisallowOverscroll" value="true" />
    <!-- core plugins -->
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <feature name="fonts">
        <param name="ios-package" value="CDVFonts" />
    </feature>
    <!-- icons and splash screens for each platform -->
    <icon src="www/icon.png"/>
    <platform name="android">
        <!-- icons -->
        <icon src="www/res/icon/android/ldpi.png" density="ldpi" />
        <icon src="www/res/icon/android/mdpi.png" density="mdpi" />
        <icon src="www/res/icon/android/hdpi.png" density="hdpi" />
        <icon src="www/res/icon/android/xhdpi.png" density="xhdpi" />
        <!-- splash screens -->
        <splash src="www/res/screen/android/screen-ldpi-portrait.png" density="port-ldpi" />
        <splash src="www/res/screen/android/screen-mdpi-portrait.png" density="port-mdpi" />
        <splash src="www/res/screen/android/screen-hdpi-portrait.png" density="port-hdpi" />
        <splash src="www/res/screen/android/screen-xdpi-portrait.png" density="port-xhdpi" />
    </platform>
    <!-- amazon's fireos uses the android icons -->
    <platform name="amazon-fireos">
        <!-- icons -->
        <icon src="www/res/icon/android/ldpi.png" density="ldpi" />
        <icon src="www/res/icon/android/mdpi.png" density="mdpi" />
        <icon src="www/res/icon/android/hdpi.png" density="hdpi" />
        <icon src="www/res/icon/android/xhdpi.png" density="xhdpi" />
        <!-- splash screens -->
        <splash src="www/res/screen/android/screen-ldpi-portrait.png" density="port-ldpi" />
        <splash src="www/res/screen/android/screen-mdpi-portrait.png" density="port-mdpi" />
        <splash src="www/res/screen/android/screen-hdpi-portrait.png" density="port-hdpi" />
        <splash src="www/res/screen/android/screen-xdpi-portrait.png" density="port-xhdpi" />
    </platform>
    <platform name="ios">
        <!-- icons -->
        <!-- iPhone / iPod / iPad -->
        <icon src="www/res/icon/ios/icon.png" width="57" height="57" />
        <icon src="www/res/icon/ios/icon@2x.png" width="114" height="114" />
        <icon src="www/res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="www/res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/res/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="www/res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="www/res/icon/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="www/res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="www/res/icon/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight icons -->
        <icon src="www/res/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="www/res/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="www/res/icon/ios/icon-40.png" width="40" height="40" />
        <icon src="www/res/icon/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="www/res/icon/ios/icon-50.png" width="50" height="50" />
        <icon src="www/res/icon/ios/icon-50@2x.png" width="100" height="100" />
        <!-- splash screens -->
        <splash src="www/res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />
        <splash src="www/res/screen/ios/screen-iphone-portrait_2x.png" width="640" height="960" />
        <splash src="www/res/screen/ios/screen-iphone5-portrait.png" width="640" height="1136" />
        <splash src="www/res/screen/ios/screen-ipad-portrait.png" width="768" height="1024" />
        <splash src="www/res/screen/ios/screen-ipad-portrait_2x.png" width="1536" height="2048" />
        <splash src="www/res/screen/ios/screen-ipad-landscape.png" width="1024" height="768" />
        <splash src="www/res/screen/ios/screen-ipad-landscape_2x.png" width="2048" height="1496" />
    </platform>
    <platform name="firefoxos">
        <icon src="www/res/icon/firefoxos/icon-60.png" width="60" height="60" />
    </platform>
    <platform name="ios">
    </platform>
    <platform name="wp8">
        <icon src="www/res/icon/windows-phone/icon.png" gap:platform="winphone" />
        <icon src="www/res/icon/windows-phone/tileicon.png" gap:platform="winphone" gap:role="background" /> 
        <splash src="www/res/screen/windows-phone/screen-portrait.jpg" />
    </platform>
    <platform name="windows8">
    </platform>
    <!-- splash screens -->
    <gap:splash src="splash.png" />
</widget>
